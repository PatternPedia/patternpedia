# Definition of prefixes
@prefix : <http://purl.org/patternpedia/patternlanguages/internetofthingspatterns#> .
@prefix pp: <http://purl.org/patternpedia#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@base <http://purl.org/patternpedia/patternlanguages/internetofthingspatterns/> .

#################################################################
#    The ontology of the patternlanguage
#################################################################

<http://purl.org/patternpedia/patternlanguages/internetofthingspatterns>
    rdf:type owl:Ontology ;
    owl:imports <http://purl.org/patternpedia> ,
        <http://purl.org/patternpedia/patternlanguages/internetofthingspatterns/internetofthingspatterns-Patterns> ,
        <http://purl.org/patternpedia/patternlanguages/internetofthingspatterns/internetofthingspatterns-Relations> .


#################################################################
#    Data Properties
#################################################################

# summary of the pattern
:hasSummary rdf:type owl:DataProperty .

# other names the patterns might be known
:hasAlias rdf:type owl:DataProperty .

# graphical representation of the pattern for architecture diagrams or sketches
:hasIcon rdf:type owl:DataProperty .

# core problem that is solved by this pattern independently from the domain or technology:hasProblem rdf:type owl:DataProperty .

# circumstances in which the problem typically occurs
:hasContext rdf:type owl:DataProperty .

# things that must be taken in account when choosing a solution to a problem
:hasForce rdf:type owl:DataProperty .

# core steps to solve the problem
:hasSolution rdf:type owl:DataProperty .

# a graphical representation of the solution
:hasSolutionSketch rdf:type owl:DataProperty .

# solution in greater detail
:hasResult rdf:type owl:DataProperty .

# different form of the patterns
:hasVariant rdf:type owl:DataProperty .


#################################################################
#    Class definitions
#################################################################

:InternetofThingsPattern
    rdf:type owl:Class ;
    rdfs:subClassOf pp:Pattern ,
        [ rdf:type owl:Restriction ;
          owl:onProperty <http://purl.org/patternpedia#hasName> ;
          owl:qualifiedCardinality "1"^^xsd:nonNegativeInteger ;
          owl:onDataRange xsd:string
        ] ,
        [ rdf:type owl:Restriction ;
          owl:onProperty :hasSummary ;
          owl:qualifiedCardinality "1"^^xsd:nonNegativeInteger ;
          owl:onDataRange xsd:string
        ] ,
        [ rdf:type owl:Restriction ;
          owl:onProperty :hasAlias ;
          owl:allValuesFrom xsd:string
        ] ,
        [ rdf:type owl:Restriction ;
          owl:onProperty :hasIcon ;
          owl:qualifiedCardinality "1"^^xsd:nonNegativeInteger ;
          owl:onDataRange xsd:anyURI
        ] ,
        [ rdf:type owl:Restriction ;
          owl:onProperty :hasProblem ;
          owl:qualifiedCardinality "1"^^xsd:nonNegativeInteger ;
          owl:onDataRange xsd:string
        ] ,
        [ rdf:type owl:Restriction ;
          owl:onProperty :hasContext ;
          owl:qualifiedCardinality "1"^^xsd:nonNegativeInteger ;
          owl:onDataRange xsd:string
        ] ,
        [ rdf:type owl:Restriction ;
          owl:onProperty :hasForce ;
          owl:allValuesFrom xsd:string
        ] ,
        [ rdf:type owl:Restriction ;
          owl:onProperty :hasSolution ;
          owl:qualifiedCardinality "1"^^xsd:nonNegativeInteger ;
          owl:onDataRange xsd:string
        ] ,
        [ rdf:type owl:Restriction ;
          owl:onProperty :hasSolutionSketch ;
          owl:qualifiedCardinality "1"^^xsd:nonNegativeInteger ;
          owl:onDataRange xsd:anyURI
        ] ,
        [ rdf:type owl:Restriction ;
          owl:onProperty :hasResult ;
          owl:qualifiedCardinality "1"^^xsd:nonNegativeInteger ;
          owl:onDataRange xsd:string
        ] ,
        [ rdf:type owl:Restriction ;
          owl:onProperty :hasVariant ;
          owl:allValuesFrom xsd:string
        ] .

